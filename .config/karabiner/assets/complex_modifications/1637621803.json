  "rules": [
    {
      "description": "Ctrl + Left Click to Left Click",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "pointing_button": "button1",
            "modifiers": {
              "mandatory": [
                  "left_control"
              ],
              "optional": [
                  "caps_lock"
              ]
            }
          },
          "to": [

          ]
        }
      ]
    },
    {
