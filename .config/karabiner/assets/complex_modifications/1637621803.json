      "manipulators": [
        {
          "type": "basic",
          "from": {
            "keycode": "F",
            "modifiers": {
              "mandatory": [
                  "left_control",
                  "shift"
              ],
              "optional": [
                  "any"
              ]
            }
          },
          "to": [
              {
                 "key_code": "F",
                 "modifiers": [
                    "left_command",
                    "shift"
                 ]
              }
          ]
        }
      ]
    },
    {
      "description": "ctrl f from command f",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "keycode": "f",
            "modifiers": {
              "mandatory": [
                  "left_control"
              ],
              "optional": [
                  "any"
              ]
            }
          },
          "to": [
              {
                 "key_code": "f",
                 "modifiers": [
                    "left_command"
                 ]
              }
          ]
        }
      ]
